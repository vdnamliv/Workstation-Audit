# PostgreSQL
POSTGRES_USER=audit
POSTGRES_PASSWORD=change-me
POSTGRES_DB=audit
POSTGRES_DSN=postgres://audit:change-me@postgres:5432/audit?sslmode=disable

# Keycloak
KEYCLOAK_DB=audit
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=change-me
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=change-me
KEYCLOAK_REALM=vt-audit

# OAuth2 proxy
OIDC_CLIENT_ID=dashboard-proxy
OIDC_CLIENT_SECRET=replace-with-real-secret
OIDC_COOKIE_SECRET=replace-with-32-byte-base64

# Step-CA bootstrap
STEPCA_NAME=VT-Audit CA
STEPCA_DNS_NAMES=gateway.local,stepca,api-agent
STEPCA_PROVISIONER=bootstrap@vt-audit
STEPCA_PASSWORD=change-me
STEPCA_URL=https://stepca:9000
STEPCA_EXTERNAL_URL=https://gateway.local/step-ca
STEPCA_KEY_PATH=/stepca/secrets/provisioner.key

# Agent bootstrap
MTLS_CERT_TTL=24h
AGENT_BOOTSTRAP_TOKEN=set-a-strong-secret

# OIDC assertions
OIDC_ISSUER=https://gateway.local/auth/realms/vt-audit
OIDC_ADMIN_ROLE=admin
