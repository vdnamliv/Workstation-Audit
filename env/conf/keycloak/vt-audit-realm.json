{
  "realm": "vt-audit",
  "enabled": true,
  "registrationAllowed": false,
  "roles": {
    "realm": [
      { "name": "admin", "description": "Policy administrators" },
      { "name": "auditor", "description": "Read-only auditors" },
      { "name": "viewer", "description": "Dashboard viewers" }
    ]
  },
  "clients": [
    {
      "clientId": "dashboard-proxy",
      "name": "Dashboard OAuth2 Proxy",
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "dashboard-secret",
      "redirectUris": ["https://gateway.local/oauth2/callback", "https://gateway.local/auth/*"],
      "webOrigins": ["https://gateway.local"],
      "baseUrl": "https://gateway.local/",
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "protocolMappers": [
        {
          "name": "audience-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "included.client.audience": "dashboard-proxy",
            "id.token.claim": "true",
            "access.token.claim": "true"
          }
        }
      ],
      "access": {
        "view": true,
        "configure": true,
        "manage": true
      }
    }
  ],
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "email": "admin@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "admin",
          "temporary": false
        }
      ],
      "realmRoles": ["admin"]
    }
  ]
}
