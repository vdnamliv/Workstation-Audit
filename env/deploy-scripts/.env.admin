# .env for Admin API VMs (.49 and .50)
# Copy this file to each admin VM as .env in the project directory

# Database Configuration - USE DB VIP
POSTGRES_USER=vtaudit
POSTGRES_PASSWORD=YourSecurePassword123
POSTGRES_DB=vtaudit
POSTGRES_DSN=host=10.221.130.51 user=vtaudit password=YourSecurePassword123 dbname=vtaudit port=5432 sslmode=disable

# Keycloak Database
KEYCLOAK_DB=keycloak
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=KeycloakPassword123

# Keycloak Admin
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=AdminPassword123

# OIDC Configuration - USE PROXY VIP
OIDC_ISSUER=https://10.221.130.44/auth/realms/vt-audit
OIDC_CLIENT_ID=vt-audit-client
OIDC_CLIENT_SECRET=your-client-secret-here
OIDC_ADMIN_ROLE=admin
OIDC_COOKIE_SECRET=RandomBase64CookieSecret32Chars=

# StepCA Configuration - USE PROXY VIP
STEPCA_NAME=VT-Audit-CA
STEPCA_PROVISIONER=bootstrap@vt-audit
STEPCA_PASSWORD=StepCAPassword123
STEPCA_PROVISIONER_PASSWORD=ProvisionerPassword123
STEPCA_EXTERNAL_URL=https://10.221.130.44:8443/step-ca

# Agent Bootstrap Token
AGENT_BOOTSTRAP_TOKEN=your-secure-bootstrap-token-here
