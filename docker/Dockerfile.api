FROM golang:1.22-alpine AS build
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 go build -o /out/vt-server ./server/cmd/vt-server

FROM alpine:3.19
WORKDIR /app
COPY --from=build /out/vt-server /usr/local/bin/vt-server
COPY rules /app/rules
# Expose 443 for agent API
EXPOSE 443
ENV MODE=agent
CMD ["/usr/local/bin/vt-server","--mode","${MODE}","--agent-addr",":443","--rules","/app/rules","--db","/app/server_state/audit.db"]
